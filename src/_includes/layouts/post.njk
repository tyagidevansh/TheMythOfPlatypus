---
layout: layouts/base.njk
---
<article class="post">
  <a href="{{ '/' | url }}" class="back-link">‚Üê All posts</a>

  {% if image %}
    <div class="post-cover">
      <img src="{{ image }}" alt="{{ imageAlt or title }}" loading="eager" />
    </div>
  {% endif %}

  <header class="post-header">
    {% if tags %}
      {% for tag in tags %}
        {% if tag != "posts" %}
          <span class="post-tag">{{ tag }}</span>
        {% endif %}
      {% endfor %}
    {% endif %}
    <h1>{{ title }}</h1>
    <p class="meta">
      {% if author %}
        <span>{{ author }}</span>
        <span class="meta-dot"></span>
      {% endif %}
      <span>{{ date | readableDate }}</span>
      <span class="meta-dot"></span>
      <span>{{ content | readingTime }} min read</span>
    </p>
  </header>

  <div class="post-content">{{ content | safe }}</div>
</article>
